generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String     @id
  warnings  warnings[]
  history   history[]
  kick      kick[]
  ban       ban[]
  roles     String[]
  moderator Boolean    @default(false)
}

model moderator {
  id       String     @id
  warnings warnings[]
  kicks    kick[]
  bans     ban[]
}

model warnings {
  id          String    @id
  user        user      @relation(fields: [userId], references: [id])
  userId      String
  message     String
  moderator   moderator @relation(fields: [moderatorId], references: [id])
  moderatorId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model kick {
  id          String    @id
  user        user      @relation(fields: [userId], references: [id])
  userId      String
  message     String
  time        DateTime  @default(now())
  moderator   moderator @relation(fields: [moderatorId], references: [id])
  moderatorId String
}

model ban {
  id          String    @id
  user        user      @relation(fields: [userId], references: [id])
  userId      String
  message     String
  time        DateTime  @default(now())
  moderator   moderator @relation(fields: [moderatorId], references: [id])
  moderatorId String
}

model history {
  id        String   @id
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
